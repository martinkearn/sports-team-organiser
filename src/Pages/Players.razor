@page "/players"
@inject IStorageService StorageService
@inject IPlayerService PlayerService

<PageTitle>TNF - Players</PageTitle>

<h1>Players</h1>

<p>@players.Count players registered.</p>

<div>
    <button class="btn btn-secondary me-3 mb-3" data-bs-toggle="modal" data-bs-target="#addPlayerModal"><i class="fa-solid fa-plus"></i> Add Player</button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col" class="d-none d-lg-table-cell">Position</th>
            <th scope="col" class="d-none d-lg-table-cell">Rate</th>
            <th scope="col">Balance</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in players)
        {
            <tr>
                <td><InputText class="form-control" @bind-Value=player.PlayerEntity.Name @bind-Value:after="() => EditPlayer(player.PlayerEntity)"></InputText></td>
                <td class="d-none d-lg-table-cell">
                    <InputSelect class="form-select" @bind-Value=player.PlayerEntity.Position @bind-Value:after="() => EditPlayer(player.PlayerEntity)">
                        @foreach (string option in Enum.GetNames(typeof(PlayerPosition)))
                        {
                            <option value="@option">@option</option>
                        }
                    </InputSelect>
                </td>
                <td class="d-none d-lg-table-cell"><div class="input-group"><span class="input-group-text">£</span><InputNumber min="0" class="form-control" @bind-Value=player.PlayerEntity.DefaultRate @bind-Value:after="() => EditPlayer(player.PlayerEntity)"></InputNumber></div></td>
                <td><CurrencyDisplay Amount="@player.Balance" /></td>
                <td><button type="button" class="btn btn-outline-secondary" @onclick="() => DeletePlayer(player.PlayerEntity.RowKey)"><i class="fa-solid fa-trash"></i> Delete</button></td>
            </tr>
        }
    </tbody>
</table>

<!-- Add Modal -->
<div class="modal fade" id="addPlayerModal" tabindex="-1" aria-labelledby="addPlayerModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="addPlayerModalLabel">Add Shortcut</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <EditForm Model="@newPlayer" OnSubmit="@AddPlayer">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="mb-3">
                <label for="addName" class="form-label">Name</label>
                <InputText class="form-control" id="addName" @bind-Value="newPlayer.Name" />
            </div>

            <div class="mb-3">
                <label for="addTags" class="form-label">Position</label>
                <InputSelect class="form-select" @bind-Value="newPlayer.Position">
                    @foreach (string option in Enum.GetNames(typeof(PlayerPosition)))
                    {
                        <option value="@option">@option</option>
                    }
                </InputSelect>
            </div>

            <div class="mb-3">
                <label for="addDefaultRate" class="form-label">Default Rate</label>
                <div class="input-group">
                    <span class="input-group-text">£</span>
                    <InputNumber type="number" min="0" class="form-control" id="addDefaultRate" @bind-Value="newPlayer.DefaultRate" />
                </div>
                <div class="form-text">Default rate per game. Usually £3 or £4.</div>
            </div>
            
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Add Player</button>
            </div>
        </EditForm>
      </div>
    </div>
  </div>
</div>

@code {
    private List<Player> players = new();

    private PlayerEntity newPlayer = new();

    protected override void OnInitialized()
    {
        RefreshData();
    }

    async Task AddPlayer()
    {
        await StorageService.UpsertEntity<PlayerEntity>(newPlayer);
        RefreshData();
    }

    async Task EditPlayer(PlayerEntity editedPlayer)
    {
        await StorageService.UpsertEntity<PlayerEntity>(editedPlayer);
        RefreshData();
    }

    async Task DeletePlayer(string rowKey)
    {
        await PlayerService.DeletePlayer(rowKey);
        RefreshData();
    }

    private void RefreshData()
    {
        newPlayer = new();
        players = PlayerService.GetPlayers();
    }
}