@if (!string.IsNullOrEmpty(css))
{
    <i class="@css"></i>
}
else
{
    @Position.ToString()
}


@code {
    [Parameter]
    public Enums.PlayerPosition Position { get; set; }

    private string? css;

    protected override void OnParametersSet()
    {
        SetCss();
    }

    protected override void OnInitialized()
    {
        SetCss();
    }

    private void SetCss()
    {
        css = Position switch
        {
            Enums.PlayerPosition.Defender => "fa-solid fa-shield-halved",
            Enums.PlayerPosition.PlayMaker => "fa-solid fa-arrows-spin",
            Enums.PlayerPosition.BoxToBox => "fa-solid fa-person-running",
            Enums.PlayerPosition.Forward => "fa-solid fa-bullseye",
            Enums.PlayerPosition.Goalie => "fa-solid fa-hand-dots",
            _ => "fa-solid fa-circle-notch"
        };
    }
}