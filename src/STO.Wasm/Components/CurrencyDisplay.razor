@code {
    [Parameter]
    public double Amount { get; set; }

    [Parameter]
    public bool BlackText { get; set; }

    private string? _css;

    protected override void OnParametersSet()
    {
        SetCss();
    }

    protected override void OnInitialized()
    {
        SetCss();
    }

    private void SetCss()
    {
        if (!BlackText)
        {
            switch (Amount)
            {
                case (<0):
                    _css = "red-text";
                    break;
                case (0):
                    _css = "black-text";
                    break;
                case (>0):
                    _css = "green-text";
                    break;
                default:
                    break;
            }
        }
        else
        {
            _css = "black-text";
        }
    }
}