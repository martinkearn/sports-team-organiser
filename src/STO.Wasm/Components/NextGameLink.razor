@inject IGameService GameService

@if (string.IsNullOrEmpty(IconCss))
{
    <a class="@Css" href="/games/@_nextGameDate">Next Game</a>
}
else
{
    <a class="@Css" href="/games/@_nextGameDate"><i class="@IconCss"></i> Next Game</a>
}

@code {
    [Parameter] public string? Css { get; set; }

    [Parameter] public string? IconCss { get; set; }

    private string _nextGameDate = default!;

    protected override void OnInitialized()
    {
        var ge = GameService.GetNextGameEntity();
        _nextGameDate = GameService.GetGameDateLabelFromDate(ge.Date.Date);
    }

}