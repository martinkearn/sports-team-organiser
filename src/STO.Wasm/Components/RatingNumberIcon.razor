<style>
    .fa-stack.small { font-size: 0.6em; }
    i { vertical-align: middle; }
</style>

@if (!string.IsNullOrEmpty(_css))
{
    <span class="fa-stack small">
        <i class="fa-solid fa-star fa-stack-2x"></i>
        <i class="@_css"></i>
    </span>
}

@code {
    [Parameter]
    public double Rating { get; set; }

    private string? _css;

    protected override void OnParametersSet()
    {
        SetCss();
    }

    protected override void OnInitialized()
    {
        SetCss();
    }

    private void SetCss()
    {
        var roundedRating = Math.Round(Rating);
        switch (roundedRating)
        {
            case 1:
                _css = "fa-solid fa-1 fa-stack-1x fa-inverse";
                break;
            case 2:
                _css = "fa-solid fa-2 fa-stack-1x fa-inverse";
                break;       
            case 3:
                _css = "fa-solid fa-3 fa-stack-1x fa-inverse";
                break; 
            case 4:
                _css = "fa-solid fa-4 fa-stack-1x fa-inverse";
                break;
            case 5:
                _css = "fa-solid fa-5 fa-stack-1x fa-inverse";
                break;
            default:
                _css = "";
                break;
        }
    }
}