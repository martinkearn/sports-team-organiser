@page "/cachedplayers"
@inject IPlayerEntityService PlayerEntityService

<PageTitle>TNF - @pageTitle</PageTitle>

<h1><i class="fa-solid fa-user me-2"></i> @pageTitle</h1>

<p>@playerEntities.Count players registered.</p>

<div>
	<a class="btn btn-primary me-3 mb-3" href="/cachedplayers/add"><i class="fa-solid fa-plus"></i> Add Player</a>
</div>

<table class="table striped-columns table-hover">
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col" class="d-none d-lg-table-cell">Position</th>
			<th scope="col" class="d-none d-lg-table-cell">Admin Rating</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var pe in playerEntities)
		{
			<tr>
				<td><a href="/cachedplayers/@pe.RowKey/player">@pe.Name</a></td>
				<td class="d-none d-lg-table-cell">@pe.Position</td>
				<AuthorizeView Policy="IsAdminEmail">
					<Authorized>
						<td class="d-none d-lg-table-cell">@pe.AdminRating</td>
					</Authorized>
					<NotAuthorized>
						<td class="d-none d-lg-table-cell"><i class="fa-solid fa-key grey"></i></td>
					</NotAuthorized>
				</AuthorizeView>
			</tr>
		}
	</tbody>
</table>


@code {
	private List<PlayerEntity> playerEntities = [];
	private string pageTitle = "Cached Players";

	protected override void OnInitialized()
	{
		playerEntities = PlayerEntityService.GetPlayerEntities();
	}
}