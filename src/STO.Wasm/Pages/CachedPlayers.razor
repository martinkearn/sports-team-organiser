@page "/cachedplayers"
@inject ICachedDataService DataService

<PageTitle>TNF - @pageTitle</PageTitle>

<h1><i class="fa-solid fa-user me-2"></i> @pageTitle</h1>

<p>@players.Count players registered.</p>

<div>
	<a class="btn btn-primary me-3 mb-3" href="/players/add"><i class="fa-solid fa-plus"></i> Add Player</a>
</div>

<table class="table striped-columns table-hover">
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col" class="d-none d-lg-table-cell">Position</th>
			<th scope="col" class="d-none d-lg-table-cell">Rate</th>
			<th scope="col" class="d-none d-lg-table-cell">Admin Rating</th>
			<th scope="col">Balance</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var player in players)
		{
			<tr>
				<td><a href="/players/@player.RowKey/player">@player.Name</a></td>
				<td class="d-none d-lg-table-cell">@player.Position</td>
				<td class="d-none d-lg-table-cell"><CurrencyDisplay Amount="@player.DefaultRate" BlackText="true" /></td>
				<AuthorizeView Policy="IsAdminEmail">
					<Authorized>
						<td class="d-none d-lg-table-cell">@player.AdminRating</td>
						<td>not implemented</td>
					</Authorized>
					<NotAuthorized>
						<td class="d-none d-lg-table-cell"><i class="fa-solid fa-key grey"></i></td>
						<td class="d-none d-lg-table-cell"><i class="fa-solid fa-key grey"></i></td>
					</NotAuthorized>
				</AuthorizeView>
			</tr>
		}
	</tbody>
</table>


@code {
	private List<PlayerEntity> players = new();

	private string pageTitle = default!;

	private bool dataReady = false;

	protected override async Task OnInitializedAsync()
	{
		await RefreshData();
	}

	private async Task RefreshData()
	{
		var data = await DataService.QueryEntities<PlayerEntity>();
		if (data is not null)
		{
			players = data.OrderByDescending(o => o.Name).ToList();
		}
		pageTitle = "Players";
		dataReady = true;
	}
}