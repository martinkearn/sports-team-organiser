@page "/games"
@inject IGameService GameService

<PageTitle>TNF - @_pageTitle</PageTitle>

<h1><i class="fa-solid fa-people-group me-2"></i> @_pageTitle</h1>

<p>@_gameEntities.Count games.</p>

<div>
	<a class="btn btn-primary" href="/quickaddpags"><i class="fa-solid fa-plus"></i> Add Players to Game</a>
	<a class="btn btn-primary" href="/games/add"><i class="fa-solid fa-plus"></i> Add Game</a>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">Date</th>
			<th scope="col">Notes</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var ge in _gameEntities)
		{
			<tr>
				<td><GameEntityTitle GameEntity="@ge" Link="true" /></td>
				<td>@ge.Notes</td>
			</tr>
		}
	</tbody>
</table>

@code {
	private List<GameEntity> _gameEntities = [];

	private string _pageTitle = default!;

	protected override void OnInitialized()
	{
		RefreshData();
	}

	private void RefreshData()
	{
		_gameEntities = GameService.GetGameEntities();
		_pageTitle = "Games";
	}
}