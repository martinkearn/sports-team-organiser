@page "/players"
@inject IPlayerService PlayerService

<PageTitle>TNF - @_pageTitle</PageTitle>

<h1><i class="fa-solid fa-user me-2"></i> @_pageTitle</h1>

<p>@_playerEntities.Count players registered.</p>

<table class="table striped-columns table-hover">
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col" class="d-none d-lg-table-cell">Position</th>
			<th scope="col" class="d-none d-lg-table-cell">Admin Rating</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var pe in _playerEntities)
		{
			<tr>
				<td><a href="/players/@pe.RowKey/player">@pe.Name</a></td>
				<td class="d-none d-lg-table-cell">@pe.Position</td>
				<AuthorizeView Policy="IsAdminEmail">
					<Authorized>
						<td class="d-none d-lg-table-cell">@pe.AdminRating</td>
					</Authorized>
					<NotAuthorized>
						<td class="d-none d-lg-table-cell"><i class="fa-solid fa-key grey"></i></td>
					</NotAuthorized>
				</AuthorizeView>
			</tr>
		}
	</tbody>
</table>


@code {
	[CascadingParameter] public MainLayout MainLayout { get; set; } = default!;
	private List<PlayerEntity> _playerEntities = [];
	private string _pageTitle = default!;

	protected override void OnInitialized()
	{
		_playerEntities = PlayerService.GetPlayerEntities();
		_pageTitle = "Players";
		MainLayout.SetPageTitle(_pageTitle);
	}
}